{
    "name": "your-name/jenkins-php-testing",
    "description": "Jenkins CI/CD dengan PHPUnit Testing",
    "type": "project",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit --testdox",
        "test-coverage": "phpunit --coverage-text"
    }
}
